                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Online Portal name</th>
                                <th>Sales%</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in pieChartInitData">
